<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag product.image.tiny %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text"><small class="text-muted"><%= humanized_money_with_symbol product.price %> * <%= quantity %> = total: <%= humanized_money_with_symbol product.price * quantity %></small></p>
      </div>
    </div>
  </div>
</div>
